<!DOCTYPE html>
<html ng-app="Planr" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="initial-scale=1.0"/>
    <title>Planr.me - Log In</title>

    <link rel="stylesheet" href="/Content/font-awesome/css/font-awesome.min.css" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href="/Content/main_style.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/Scripts/dashboard.js"></script>

</head>
<body>
    <section id="container">
        <!--header start-->
        <header class="header fixed-top clearfix">
            <!--logo start-->
            <div class="brand">
                <a href="#" class="logo">
                    <span id="logo_span">P<span id="anr">lan R</span></span>
                </a>
            </div>
            <!--logo end-->

            <div class="top-nav clearfix">
                <!--search & user info start-->
                <div class="user_profile">
                    <a href="#"><i class="fa fa-user profile_icon"></i></a>
                </div>
                <div ng-controller="RecordCtrl">
                    <span>{{record.getRecord().CreditsCompleted}}</span>
                    <span>{{record.getRecord().Option}}</span>
                    <span>{{record.getRecord().CompletedCourses}}</span>
                </div>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse">
                <!-- sidebar menu start-->
                <div class="leftside-navigation">
                    <div ng-controller="PreferencesCtrl" class="user-pref">
                        <a href=""><i class="fa fa-bars profile_icon"></i></a>
                        <div><i class="fa fa-sun-o {{pref.getPreferences.morning ? 'pref-on':'pref-off'}}" ng-click="alert('hey')"></i></div>
                        <div><i class="fa fa-moon-o {{pref.getPreferences.night ? 'pref-on':'pref-off'}}" ng-click="pref.toggleNight()"></i></div>
                        <div><i class="fa fa-bed {{pref.getPreferences.dayOff ? 'pref-on':'pref-off'}}" ng-click="pref.toggleDayOff()"></i></div>
                    </div>
                </div>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start || place for grid schedule-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-xs-12">
                        <canvas id="schedule" height="1024" width="600px;" style="border:1px solid #d3d3d3;"></canvas>
                    </div>
                </div>
                <div class="row">
                    <div ng-controller="SequenceCtrl" class="container">
                        <h1 class="sequence_title">Sequence list</h1>
                        <div ng-repeat="year in sequence.getSequence()" class="col-sm-12 yearSequence">
                            <h2 class="yearNum">Year {{$index+1}}</h2>
                            <div ng-repeat="semester in year" class="col-sm-6">
                                <h3>Semester {{$index+1}}</h3>
                                <ul class="sequence_ul">
                                    <li class="sequence_li {{'c-'+($index+1)}}" ng-repeat="course in semester">
                                        <span class="sc_name">{{course}}</span><span class="sc_credit">{{$index+1}} credits</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>
        <!--main content end-->
    </section>
</body>
</html>